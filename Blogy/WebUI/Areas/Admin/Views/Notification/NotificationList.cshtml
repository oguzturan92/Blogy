@model List<Notification>
@{
    ViewData["Title"] = "Bildirim Listesi";
    Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">BİLDİRİM LİSTESİ</h4>
                    <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table mb-3">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tarih</th>
                                        <th>Başlık</th>
                                        <th colspan="1"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NotificationId</td>
                                            <td>@item.NotificationDate</td>
                                            <td>@item.NotificationTitle</td>
                                            <td><a asp-area="Admin" asp-controller="Notification" asp-action="NotificationDelete" asp-route-id="@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        } else
                        {
                            <div class="alert alert-info text-center" role="alert">
                                Listelenecek Bildirim Bulunmuyor
                            </div>
                        }
                        <a asp-area="Admin" asp-controller="Notification" asp-action="NotificationCreate" class="btn btn-primary">Yeni Bildirim Oluştur</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>