@model Message
@{
    ViewData["Title"] = "Mesaj Daty";
    Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">MESAJ DETAY</h4>
                    <div class="table-responsive">
                        <form asp-area="Writer" asp-controller="Blog" asp-action="BlogUpdate" method="post">
                            <div class="form-group">
                                <label>Tarih</label>
                                <input type="text" value="@Model.MessageDate" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" value="@Model.MessageFullname" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label>Mail</label>
                                <input type="text" value="@Model.MessageMail" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label>Konu</label>
                                <input type="text" value="@Model.MessageSubject" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label>Mesaj</label>
                                <textarea class="form-control" disabled>@Model.MessageContent</textarea>
                            </div>
                            <a asp-area="Admin" asp-controller="Message" asp-action="MessageList" class="btn btn-dark">Geri</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>