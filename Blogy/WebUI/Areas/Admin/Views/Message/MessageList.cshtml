@model List<Message>
@{
    ViewData["Title"] = "Mesaj Listesi";
    Layout = "_LayoutAdmin";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">MESAJ LİSTESİ</h4>
                    <div class="table-responsive">
                        <table class="table mb-3">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tarih</th>
                                    <th>Ad Soyad</th>
                                    <th colspan="1"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.MessageId</td>
                                        <td>@item.MessageDate</td>
                                        <td>@item.MessageFullname</td>
                                        <td><a asp-area="Admin" asp-controller="Message" asp-action="MessageDetail" asp-route-id="@item.MessageId" class="btn btn-primary">Detay</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>