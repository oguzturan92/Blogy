@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Yazar</title>
    <link rel="stylesheet" href="/adminTemplate/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="/adminTemplate/vendors/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="/adminTemplate/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="/adminTemplate/vendors/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/adminTemplate/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="/adminTemplate/css/style.css" />
    <link rel="shortcut icon" href="/adminTemplate/images/favicon.png" />
</head> 
<body>
    <div class="container-scroller">

        
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
                <a class="sidebar-brand brand-logo">YAZAR PANELİ</a>
            </div>
            <ul class="nav">
                @await Component.InvokeAsync("_LayoutNavbarComponentPartial")
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    @* <i class="mdi mdi-home menu-icon"></i> *@
                    <span class="menu-title">Site</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Writer" asp-controller="Writer" asp-action="Index">
                    @* <i class="mdi mdi-home menu-icon"></i> *@
                    <span class="menu-title">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Writer" asp-controller="Blog" asp-action="BlogList">
                    @* <i class="mdi mdi-home menu-icon"></i> *@
                    <span class="menu-title">@localizer["Blog"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Writer" asp-controller="Chat" asp-action="ChatList">
                    @* <i class="mdi mdi-home menu-icon"></i> *@
                    <span class="menu-title">@localizer["Mesaj"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Writer" asp-controller="Statistic" asp-action="StatisticList">
                    @* <i class="mdi mdi-home menu-icon"></i> *@
                    <span class="menu-title">@localizer["İstatistik"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="UserLogout">
                    @* <i class="mdi mdi-home menu-icon"></i> *@
                    <span class="menu-title">@localizer["Çıkış"]</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid page-body-wrapper">

        <div id="theme-settings" class="settings-panel">
            <i class="settings-close mdi mdi-close"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options selected" id="sidebar-default-theme">
                <div class="img-ss rounded-circle bg-light border mr-3"></div> Default
            </div>
            <div class="sidebar-bg-options" id="sidebar-dark-theme">
                <div class="img-ss rounded-circle bg-dark border mr-3"></div> Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
                <div class="tiles light"></div>
                <div class="tiles dark"></div>
            </div>
        </div>
        
        <nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
            <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
                <a class="navbar-brand brand-logo-mini align-self-center d-lg-none" href="index.html"><img src="/adminTemplate/images/logo-mini.svg" alt="logo" /></a>
                <button class="navbar-toggler navbar-toggler align-self-center mr-2" type="button" data-toggle="minimize">
                    <i class="mdi mdi-menu"></i>
                </button>
                @* BİLDİRİMLER *@
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        @await Component.InvokeAsync("Notification")
                    </li>
                    <li class="nav-item dropdown d-none d-sm-flex">
                        @await Component.InvokeAsync("ChatBildirim")
                    </li>
                </ul>
                @* DİL SEÇENEĞİ *@
                <ul class="navbar-nav navbar-nav-right ml-lg-auto">
                    <li class="nav-item dropdown d-none d-xl-flex border-0">
                    <a class="nav-link dropdown-toggle" id="languageDropdown" href="#" data-toggle="dropdown">
                        <i class="mdi mdi-earth"></i> English </a>
                    <div class="dropdown-menu navbar-dropdown" aria-labelledby="languageDropdown">
                        <a class="dropdown-item" href="/Writer/Blog/BlogList/?culture=fr"> Fransızça </a>
                        <a class="dropdown-item" href="/Writer/Blog/BlogList/?culture=es"> İspanyolca </a>
                        <a class="dropdown-item" href="/Writer/Blog/BlogList/?culture=en"> İngilizce </a>
                        <a class="dropdown-item" href="/Writer/Blog/BlogList/?culture=tr"> Türkçe </a>
                        <a class="dropdown-item" href="/Writer/Blog/BlogList/?culture=de"> Almanca </a>
                    </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>

        <div class="main-panel">
            @RenderBody()
        </div>

        </div>

    </div>

    <!-- plugins:js -->
    <script src="/adminTemplate/vendors/js/vendor.bundle.base.js"></script>
    <!-- Plugin js for this page -->
    <script src="/adminTemplate/vendors/chart.js/Chart.min.js"></script>
    <script src="/adminTemplate/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="/adminTemplate/vendors/flot/jquery.flot.js"></script>
    <script src="/adminTemplate/vendors/flot/jquery.flot.resize.js"></script>
    <script src="/adminTemplate/vendors/flot/jquery.flot.categories.js"></script>
    <script src="/adminTemplate/vendors/flot/jquery.flot.fillbetween.js"></script>
    <script src="/adminTemplate/vendors/flot/jquery.flot.stack.js"></script>
    <script src="/adminTemplate/vendors/flot/jquery.flot.pie.js"></script>
    <!-- inject:js -->
    <script src="/adminTemplate/js/off-canvas.js"></script>
    <script src="/adminTemplate/js/hoverable-collapse.js"></script>
    <script src="/adminTemplate/js/misc.js"></script>
    <!-- Custom js for this page -->
    <script src="/adminTemplate/js/dashboard.js"></script>
</body>
</html>