@model List<Comment>
@{
    ViewData["Title"] = "CommentList";
    Layout = "_LayoutWriter";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">BLOG LİSTESİ</h4>
                    <div class="table-responsive">
                        <table class="table mb-3">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tarih</th>
                                    <th>Ad Soyad</th>
                                    <th>Yorum</th>
                                    <th colspan="1"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.CommentId</td>
                                        <td>@item.CommentDate</td>
                                        <td>@item.CommentFullname</td>
                                        <td>@item.CommentContent</td>
                                        <td><a asp-area="Writer" asp-controller="Blog" asp-action="CommentDelete" asp-route-id="@item.CommentId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-area="Writer" asp-controller="Blog" asp-action="BlogCreate" class="btn btn-primary">Yeni Blog Girişi</a>
                        <a asp-area="Writer" asp-controller="Blog" asp-action="BlogList" class="btn btn-dark ml-2">Geri</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>