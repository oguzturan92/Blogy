@model List<Article>
@{
    ViewData["Title"] = "Blog Listesi";
    Layout = "_LayoutWriter";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">BLOG LİSTESİ</h4>
                    <div class="table-responsive">
                        <table class="table mb-3">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Blog Başlığı</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                    <th colspan="3"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.ArticleId</td>
                                        <td>@item.ArticleTitle</td>
                                        <td>@item.ArticleCreatedDate.ToString("dd/MM/yyyy")</td>
                                        <td>@item.CategoryId</td>
                                        <td><a asp-area="Writer" asp-controller="Blog" asp-action="CommentList" asp-route-id="@item.ArticleId" class="btn btn-warning">Yorumlar</a></td>
                                        <td><a asp-area="Writer" asp-controller="Blog" asp-action="BlogUpdate" asp-route-id="@item.ArticleId" class="btn btn-success">Güncelle</a></td>
                                        <td><a asp-area="Writer" asp-controller="Blog" asp-action="BlogDelete" asp-route-id="@item.ArticleId" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-area="Writer" asp-controller="Blog" asp-action="BlogCreate" class="btn btn-primary">Yeni Blog Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>