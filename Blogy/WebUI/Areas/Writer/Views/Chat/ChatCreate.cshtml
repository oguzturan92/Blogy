@model ChatModel
@{
    ViewData["Title"] = "Yeni Mesaj Gönder";
    Layout = "_LayoutWriter";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">YENİ MESAJ GÖNDER</h4>
                    <div class="table-responsive">
                        <form asp-area="Writer" asp-controller="Chat" asp-action="ChatCreate" method="post">
                            <div class="form-group">
                                <label>Mesaj Göndermek İstediğiniz Kullanıcıyı Seçiniz</label>
                                <select asp-for="ReceiverUserId" class="form-control">
                                    @foreach (var item in Model.Users)
                                    {
                                        <option value="@item.Id">@item.Name @item.Surname</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Mesajınız</label>
                                <textarea asp-for="ChatMessage" cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <button class="btn btn-primary" type="submit">Gönder</button>
                            <a asp-area="Writer" asp-controller="Chat" asp-action="ChatList" class="btn btn-dark ml-2">Geri</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>