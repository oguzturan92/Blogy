@model List<Chat>
@{
    ViewData["Title"] = "Mesaj Listesi";
    Layout = "_LayoutWriter";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">MESAJ LİSTESİ</h4>
                    <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table mb-3">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tarih</th>
                                        <th colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ChatId</td>
                                            <td>@item.ChatDate</td>
                                            <td><a asp-area="Writer" asp-controller="Chat" asp-action="ChatReply" asp-route-id="@item.ChatId" class="btn btn-success">Oku & Yanıtla</a></td>
                                            <td><a asp-area="Writer" asp-controller="Chat" asp-action="ChatDelete" asp-route-id="@item.ChatId" class="btn btn-danger">Sil</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        } else
                        {
                            <div class="alert alert-info text-center" role="alert">
                                Listelenecek Mesaj Bulunmuyor
                            </div>
                        }
                        <a asp-area="Writer" asp-controller="Chat" asp-action="ChatCreate" class="btn btn-primary">Yeni Mesaj Gönder</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>