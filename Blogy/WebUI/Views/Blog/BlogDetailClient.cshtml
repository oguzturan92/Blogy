@model BlogDetailClientModel
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "_Layout";
}

  <div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/blogy/images/hero_5.jpg');">
    <div class="container">
      <div class="row same-height justify-content-center">
        <div class="col-md-6">
          <div class="post-entry text-center">
            <h1 class="mb-4">@Model.Article.ArticleTitle</h1>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="container">

      <div class="row blog-entries element-animate">

        @* BLOG DETAIL *@
        <div class="col-md-12 col-lg-8 main-content">
          <div class="post-content-body">
