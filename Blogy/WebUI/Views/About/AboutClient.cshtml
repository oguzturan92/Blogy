@model AboutModel
@{
    ViewData["Title"] = "Hakk覺m覺zda";
    Layout = "_Layout";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/blogy/images//hero_5.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-6">
                <div class="post-entry text-center">
                    <h1 class="mb-4">Hakk覺m覺zda</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section sec-halfs py-0">
    <div class="container">

        @foreach (var item in Model.Abouts)
        {
            <div class="half-content d-lg-flex align-items-stretch p-5">
                <div class="img" style="background-image: url('@item.AboutImage')" data-aos="fade-in" data-aos-delay="100">
                    
                </div>
                <div class="text">
                    <h2 class="heading text-primary mb-3">@item.AboutTitle</h2>
                    <p class="mb-4">@item.AboutDescription</p>
                </div>
            </div>
        }

    </div>

</div>