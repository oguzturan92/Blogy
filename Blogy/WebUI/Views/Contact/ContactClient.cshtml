@model ContactModel
@{
    ViewData["Title"] = "İletişim";
	Layout = "_Layout";
}

<div class="hero overlay inner-page bg-primary py-5">
	<div class="container">
		<div class="row align-items-center justify-content-center text-center pt-5">
			<div class="col-lg-6">
				<h1 class="heading text-white mb-3" data-aos="fade-up">İletişim</h1>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
				<div class="contact-info">

					<div class="address mt-2">
						<i class="icon-room"></i>
						<h4 class="mb-2">Adres:</h4>
						<p>@Model.Address.AddressContent</p>
					</div>

					<div class="email mt-4">
						<i class="icon-envelope"></i>
						<h4 class="mb-2">Email:</h4>
						<p>@Model.Address.AddressMail</p>
					</div>

					<div class="phone mt-4">
						<i class="icon-phone"></i>
						<h4 class="mb-2">Telefon No:</h4>
						<p>@Model.Address.AddressPhone</p>
					</div>

				</div>
			</div>
			<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
				<form asp-controller="Contact" asp-action="NewMessage" method="post">
					<div class="row">
						<div class="col-6 mb-3">
							<input type="text" name="MessageFullname" class="form-control" placeholder="Ad Soyad">
						</div>
						<div class="col-6 mb-3">
							<input type="email" name="MessageMail" class="form-control" placeholder="Email">
						</div>
						<div class="col-12 mb-3">
							<input type="text" name="MessageSubject" class="form-control" placeholder="Konu">
						</div>
						<div class="col-12 mb-3">
							<textarea name="MessageContent" id="" cols="30" rows="7" class="form-control" placeholder="Mesaj"></textarea>
						</div>
						<div class="col-12">
							<input type="submit" value="Gönder" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>